# === Основные переменные окружения для Pidr_game ===

# URL для подключения к базе данных PostgreSQL (Render, Railway, локально и т.д.)
DATABASE_URL=postgres://user:password@host:port/dbname
# или альтернативно (если используется)
DATA_BASE=postgres://user:password@host:port/dbname

# Telegram Bot API Token (если используется бот)
BOT_TOKEN=your_telegram_bot_token
# Username Telegram-бота (без @)
BOT_USERNAME=your_bot_username

# Секрет для сессий express-session
SESSION_SECRET=your_session_secret_here

# Базовый URL приложения (например, для OAuth или ссылок)
APP_URL=https://your-app-url.onrender.com
BASE_URL=https://your-app-url.onrender.com

# Порт сервера (по умолчанию 3000)
PORT=3000

# Node.js окружение (production/development)
NODE_ENV=production

# === Необязательные/редко используемые ===
# (Добавьте по мере необходимости)
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_NAME=pidr
# DB_PORT=5432 